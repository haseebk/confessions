<%- include('partials/header') %>

<nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/confessions" role="button">
    <i class="fas fa-user-secret fa-2x"></i>
    Confessions
  </a>
  <a class="btn btn-light btn-lg" href="/logout" role="button">Logout</a>
</nav>

<div class="container">
  <div
    class="jumbotron centered bg-white d-flex flex-column justify-content-center"
  >
    <p class="lead">
      Clear your head and anonymously vent those confessions you've been holding
      in!
    </p>
    <hr />

    <form action="/submit" method="POST">
      <div class="form-group">
        <input
          type="text"
          class="form-control text-center"
          name="confession"
          autocomplete="off"
          placeholder="What would you like to share?"
        />
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
